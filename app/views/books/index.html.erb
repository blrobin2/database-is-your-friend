<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Blurb</th>
      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.blurb %></td>
        <td><%= link_to 'Move Up', book_move_up_path(book), method: :post %></td>
        <td><%= link_to 'Move Down', book_move_down_path(book), method: :post %></td>
        <td><%= link_to 'Move to Top', book_move_to_top_path(book), method: :post %></td>
        <td><%= link_to 'Move to Bottom', book_move_to_bottom_path(book), method: :post %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
